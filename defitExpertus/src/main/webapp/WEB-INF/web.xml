<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0"
  xmlns="http://java.sun.com/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
		
  <servlet>
          <servlet-name>Add</servlet-name>
          <servlet-class>de.EmployeeControllerAdd</servlet-class>
   </servlet>
   <servlet-mapping>
          <servlet-name>Add</servlet-name>
          <url-pattern>/employeeAdd</url-pattern>
   </servlet-mapping>
   
   <servlet>
          <servlet-name>Retrieve</servlet-name>
          <servlet-class>de.EmployeeControllerRetrive</servlet-class>
   </servlet>
   <servlet-mapping>
          <servlet-name>Retrieve</servlet-name>
          <url-pattern>/employeeRetrive</url-pattern>
   </servlet-mapping>
       
       
       
  <welcome-file-list>
        <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  
 
</web-app>
  